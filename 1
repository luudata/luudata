# Nhập 2 số từ người dùng
so1 = float(input("Nhập số thứ nhất: "))
so2 = float(input("Nhập số thứ hai: "))

# Thực hiện các phép tính
cong = so1 + so2
tru = so1 - so2 
nhan = so1 * so2
chia = so1 / so2

# In kết quả
print(f"{so1} + {so2} = {cong}")
print(f"{so1} - {so2} = {tru}")
print(f"{so1} x {so2} = {nhan}")
print(f"{so1} ÷ {so2} = {chia}")